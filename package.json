{
  "name": "community-notice-board",
  "version": "1.0.0",
  "description": "A simple, functional digital notice board for local communities and residential societies",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=index.html",
    "build": "echo 'No build process needed for static HTML'",
    "deploy:netlify": "npx netlify-cli deploy --prod",
    "deploy:vercel": "npx vercel --prod"
  },
  "keywords": [
    "community",
    "notice-board",
    "announcements",
    "events",
    "residential-society",
    "static-website",
    "vanilla-javascript",
    "tailwindcss"
  ],
  "author": "Community Developer",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/community-notice-board.git"
  },
  "homepage": "https://your-username.github.io/community-notice-board",
  "engines": {
    "node": ">=14.0.0"
  }
}